# ===========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env.production and fill in the values

# ===========================================
# DATABASE
# ===========================================
POSTGRES_USER=kilasindonesia
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
POSTGRES_DB=kilasindonesia

# This is constructed automatically in docker-compose, but needed for local builds
DATABASE_URL=postgresql://kilasindonesia:YOUR_PASSWORD@postgres:5432/kilasindonesia?schema=public

# ===========================================
# AUTH (NextAuth.js)
# ===========================================
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
NEXTAUTH_URL=https://kilasindonesia.com

# ===========================================
# APP
# ===========================================
NEXT_PUBLIC_APP_URL=https://kilasindonesia.com
NEXT_PUBLIC_APP_NAME=Kilas Indonesia

# ===========================================
# SSL (Let's Encrypt)
# ===========================================
SSL_EMAIL=admin@kilasindonesia.com
